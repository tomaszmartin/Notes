<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="@string/font_size_preference_title"
        android:key="@string/font_size_preference"
        android:defaultValue="@string/font_size_preference_default"
        android:entryValues="@array/font_size_preference_values"
        android:entries="@array/font_size_preference_options"
        android:layout="@layout/prefs_item"
        />

    <SwitchPreference
        android:title="@string/nigh_mode_preference_title"
        android:key="@string/night_mode_preference"
        android:defaultValue="true"
        />

    <ListPreference
        android:title="@string/sort_preference_title"
        android:key="@string/sort_preference"
        android:defaultValue="@string/sort_preference_default"
        android:entryValues="@array/sort_preference_values"
        android:entries="@array/sort_preference_values"
        android:layout="@layout/prefs_item"
        />

    <ListPreference
        android:title="@string/lines_preference_title"
        android:key="@string/lines_count_preference"
        android:defaultValue="@string/lines_preference_default"
        android:entryValues="@array/lines_preference_values"
        android:entries="@array/lines_preference_options"
        android:layout="@layout/prefs_item"
        />

    <SwitchPreference
        android:title="@string/show_date_preference_title"
        android:key="@string/show_date_preference"
        android:defaultValue="true"
        />

</PreferenceScreen>
