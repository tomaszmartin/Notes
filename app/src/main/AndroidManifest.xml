<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.tomaszmartin.stuff"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBar"
        >

        <activity
            android:name="pl.tomaszmartin.stuff.MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details_acitivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".DrawingActivity"
            android:label="@string/action_draw"
            android:parentActivityName=".DetailsActivity"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".RecordActivity"
            android:label="@string/action_voice"
            android:parentActivityName=".DetailsActivity"
            android:launchMode="singleTop">
        </activity>

        <service
            android:name=".AlarmService"
            android:enabled="true"
            />

        <receiver
            android:name=".AlarmReceiver"
            />

        <provider
            android:authorities="pl.tomaszmartin.stuff"
            android:name=".NotesProvider"
            />

    </application>

</manifest>
