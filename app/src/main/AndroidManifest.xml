<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.tomaszmartin.stuff"
    >

    <permission
        android:name="pl.tomaszmartin.stuff.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="pl.tomaszmartin.stuff.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBar"
        android:name=".AnalyticsApplication"
        >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- App components -->
        <activity
            android:name="pl.tomaszmartin.stuff.MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details_acitivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".DrawingActivity"
            android:label="@string/action_draw"
            android:parentActivityName=".DetailsActivity"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".RecordActivity"
            android:label="@string/action_voice"
            android:parentActivityName=".DetailsActivity"
            android:launchMode="singleTop">
        </activity>

        <service
            android:name=".AlarmService"
            android:enabled="true"
            />

        <receiver
            android:name=".AlarmReceiver"
            />

        <provider
            android:authorities="pl.tomaszmartin.stuff"
            android:name=".NotesProvider"
            />

        <!-- Google Analytics components -->
        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.analytics.AnalyticsService"
            android:enabled="true"
            android:exported="false"/>

        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <!-- Google Cloud Messaging components -->
        <!--<receiver-->
            <!--android:name=".GcmBroadcastReceiver"-->
            <!--android:permission="com.google.android.c2dm.permission.SEND" >-->

            <!--<intent-filter>-->
                <!--<action android:name="com.google.c2dm.intent.RECEIVE" />-->
                <!--<category android:name="pl.tomaszmartin.sunhine" />-->
            <!--</intent-filter>-->

        <!--</receiver>-->

    </application>

</manifest>
