<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.codeinprogress.notes">

    <permission
        android:name="pl.codeinprogress.notes.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="pl.codeinprogress.notes.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBar">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- App components -->
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DetailsActivity"
            android:label="@string/title_activity_details_acitivity"
            android:launchMode="singleTop"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <service
            android:name=".view.services.FirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".view.services.AlarmService"
            android:enabled="true" />

        <receiver android:name=".view.services.AlarmReceiver" />

        <activity
            android:name=".view.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/login"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.codeinprogress.notes.view.MainActivity" />
        </activity>

        <activity
            android:name=".view.SignupActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/signup"
            android:parentActivityName=".view.LoginActivity"
            android:theme="@style/Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.codeinprogress.notes.view.LoginActivity" />
        </activity>

    </application>

</manifest>